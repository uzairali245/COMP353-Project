CREATE TABLE Regions(
    RegionName VARCHAR(255), 
    rID INT  NOT NULL PRIMARY KEY
);

CREATE TABLE Countries (
CountryName VARCHAR (255),
cID INT  NOT NULL PRIMARY KEY,
population INT,
deaths INT,
infected INT,
infectednotVax INT,
totalVaxxed INT,
rID int,
FOREIGN KEY (rID) REFERENCES Regions(rID)
);

CREATE TABLE Vaccine(
vaccine_type VARCHAR(255)  NOT NULL PRIMARY KEY,
infected INT,
deaths INT,
vaccinated INT,
cID INT,
  FOREIGN KEY (cID) REFERENCES Countries(cID)
);

CREATE TABLE User(
UserId INT  NOT NULL PRIMARY KEY,
firstName VARCHAR(255),
LastName VARCHAR(255),
email VARCHAR(255),
phone float,
Citizenship VARCHAR(255),
cID INT,
FOREIGN KEY (cID) REFERENCES Countries(cID)
);

CREATE TABLE Article(
publishDate DATE,
paragraphs VARCHAR(255),
summary CHAR(100),
major_topic VARCHAR(255),
minor_topic VARCHAR(255),
aID INT,
FOREIGN KEY (aID) REFERENCES Author(aID)
);

CREATE TABLE Organisations(
oID INT  NOT NULL PRIMARY KEY,
name VARCHAR(255),
Type VARCHAR(255),
UserId INT,
resID INT,
aID INT,
FOREIGN KEY (UserID) REFERENCES User(UserID)
FOREIGN KEY (resID) REFERENCES Researcher(resID)
FOREIGN KEY (aID) REFERENCES Author(aID)
);

CREATE TABLE Author(
 name VARCHAR(255),
 aID INT  NOT NULL PRIMARY KEY,
 resID INT,
 oID INT,
 FOREIGN KEY (resID) REFERENCES Researcher(resID)
 FOREIGN KEY (oID) REFERENCES Organisations(oID)
);

CREATE TABLE Researcher(
    resID INT  NOT NULL PRIMARY KEY,
    UserID INT,
    FOREIGN KEY (UserID) REFERENCES User(UserID)
);

