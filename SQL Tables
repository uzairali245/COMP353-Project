CREATE TABLE IF NOT EXISTS Regions(
  RegionName VARCHAR(255), 
  rID INT  NOT NULL PRIMARY KEY
);

CREATE TABLE IF NOT EXISTS Countries (
CountryName VARCHAR (255),
cID INT  NOT NULL PRIMARY KEY,
population INT,
deaths INT,
infected INT,
totalVaxxed INT,
govAgency VARCHAR(255),
rID int,
currentdate DATE,
FOREIGN KEY (rID) REFERENCES Regions(rID)
);

CREATE TABLE IF NOT EXISTS Vaccine(
vaccine_type VARCHAR(255),
infected INT,
deaths INT,
vaccinated INT,
cID INT,
FOREIGN KEY (cID) REFERENCES Countries(cID)
);

CREATE TABLE IF NOT EXISTS Users(
UserID INT  NOT NULL PRIMARY KEY,
username VARCHAR(255),
firstName VARCHAR(255),
LastName VARCHAR(255),
email VARCHAR(255),
phone INT(15),
Citizenship VARCHAR(255),
userType VARCHAR(255) check (userType in ('administrator', 'researcher', 'organization delegate')), --  Privilege name could be either administrator, researcher, or organization delegate
dob DATE,
cID INT,
FOREIGN KEY (cID) REFERENCES Countries(cID)
);

CREATE TABLE IF NOT EXISTS Organisations(
orgID INT  NOT NULL PRIMARY KEY,
orgName VARCHAR(255),
orgType VARCHAR(255) check (orgType in ('company', 'research center', 'government agency')), -- can only be company, a research center, or a government agency
UserID INT,
resID INT,
aID INT,
cID INT,
FOREIGN KEY (UserID) REFERENCES Users(UserID),
FOREIGN KEY (aID) REFERENCES Author(aID),
FOREIGN KEY (resID) REFERENCES Researcher(resID),
FOREIGN KEY (cID) REFERENCES Countries(cID)
);

CREATE TABLE IF NOT EXISTS Researcher(
  resID INT  NOT NULL PRIMARY KEY,
  orgID INT,
  UserID INT,
  aID INT,
  FOREIGN KEY (UserID) REFERENCES Users(UserID),
  FOREIGN KEY (orgID) REFERENCES Organisations(orgID),
  FOREIGN KEY (aID) REFERENCES Author(aID)
);



CREATE TABLE IF NOT EXISTS Author(
aID INT NOT NULL PRIMARY KEY,
resID INT,
orgID INT,
UserID INT,
FOREIGN KEY (resID) REFERENCES Researcher(resID),
FOREIGN KEY (orgID) REFERENCES Organisations(orgID),
FOREIGN KEY (UserID) REFERENCES Users(UserID)
);

CREATE TABLE IF NOT EXISTS Article(
publishDate DATE,
paragraphs VARCHAR(255),
summary CHAR(100),
major_topic VARCHAR(255),
minor_topic VARCHAR(255),
aDiscription CHAR(100),
artID INT NOT NULL PRIMARY KEY,
aID INT,
UserID INT,
resID INT,
FOREIGN KEY (aID) REFERENCES Author(aID),
FOREIGN KEY (UserID) REFERENCES Users(UserID),
FOREIGN KEY (resID) REFERENCES Researcher(resID)
);

CREATE TABLE IF NOT EXISTS UserAuthorNotification(
UserID INT,
aID INT,
FOREIGN KEY (UserID) REFERENCES Users(UserID),
FOREIGN KEY (aID) REFERENCES Author(aID)
);

CREATE TABLE deletedArticle(
removalDate DATE,
publishDate DATE,
paragraphs VARCHAR(255),
summary CHAR(100),
major_topic VARCHAR(255),
minor_topic VARCHAR(255),
aDiscription CHAR(100),
artID INT NOT NULL PRIMARY KEY,
aID INT,
UserID INT,
resID INT,
FOREIGN KEY (aID) REFERENCES Author(aID),
FOREIGN KEY (UserID) REFERENCES Users(UserID),
FOREIGN KEY (resID) REFERENCES Researcher(resID)
);

CREATE TABLE suspendedUsers(
suspensionDate DATE,
UserID INT  NOT NULL PRIMARY KEY,
username VARCHAR(255),
firstName VARCHAR(255),
LastName VARCHAR(255),
email VARCHAR(255),
phone INT(15),
Citizenship VARCHAR(255),
userType VARCHAR(255) check (userType in ('administrator', 'researcher', 'organization delegate')), --  Privilege name could be either administrator, researcher, or organization delegate
dob DATE,
cID INT,
FOREIGN KEY (cID) REFERENCES Countries(cID)
);